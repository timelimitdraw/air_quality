<div class="page-header">
  <h1>
    Zips
    <a href="/zips/new" class="btn btn-lg btn-success">New Zip</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "zips_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :zip_code, "Zip code" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :zip_code_gteq, :class => "form-control", :placeholder => "Zip code greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :zip_code_lteq, :class => "form-control", :placeholder => "Zip code less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/zips" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#zips_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Zip code</th>
        <th>Actions</th>
      </tr>

      <% @zips.each do |zip| %>
      <tr>
        <td>
          <% if zip.user.present? %>
            <a href="/users/<%= zip.user.id %>">
              <%= zip.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= zip.zip_code %></td>
        <td>
          <a href="/zips/<%= zip.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == zip.user %>
            <a href="/zips/<%= zip.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_zip/<%= zip.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @zips, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
